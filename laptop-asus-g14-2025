# This is a messy NixOS Config file until I know the syntax a bit better.

{ config, pkgs, lib, ... }:

let
  # Script to disable the dGPU when in Integrated mode and waking from sleep.
  # The Nvidia dGPU tends to turn itself back on after wake from sleep even if not in Hybrid mode
  dgpuDisableScript = pkgs.writeShellScriptBin "dgpu-disable" ''
    #!${pkgs.bash}/bin/bash
    
    mode=$(supergfxctl -g)
    state=$(supergfxctl -S)

    #toggle modes if we're in Integrated and the dGPU is awake
    if [ $state == active ]; then
        if [ $mode == Integrated ]; then
            supergfxctl -m Vfio
            sleep 1
            supergfxctl -m Integrated
        exit
        fi
    fi

    #toggle modes if we're in Integrated and the dGPU is on the PCI bus.
    if [ $mode == Integrated ]; then
        if [ -d "/sys/bus/pci/devices/0000:64:00.0" ]; then
            supergfxctl -m Vfio
            sleep 1
            supergfxctl -m Integrated
        fi
    fi
  '';
in
{
  imports =
    [ # Include the results of the hardware scan.
      ./hardware-configuration.nix
      ./flatpak.nix
    ];

  # Bootloader.
  boot.loader.systemd-boot.enable = true;
  boot.loader.efi.canTouchEfiVariables = true;

  boot.kernelParams = ["acpi_backlight=native"]; # Allows laptop display brightness change when on iGPU

  # Enable Flakes
  nix.settings.experimental-features = ["nix-command" "flakes"];

  boot.initrd.luks.devices."luks-ddec9c5b-ad47-4452-8d40-a69b9cb2ccde".device = "/dev/disk/by-uuid/ddec9c5b-ad47-4452-8d40-a69b9cb2ccde";
  networking.hostName = "nixos"; # Define your hostname.

  # Enable zram swap
  zramSwap.enable = true;

  # Enable networking
  networking.networkmanager.enable = true;

  # Set your time zone.
  time.timeZone = "America/Vancouver";

  # Select internationalisation properties.
  i18n.defaultLocale = "en_CA.UTF-8";

  # Env vars
  environment.variables = {
    GSK_RENDERER = "ngl"; # use new openGL renderer instead of vulkan for gtk vulkan slowdown on nvidia bug

    # This stops the nvidia dGPU from being used for vulkan stuff?
    # Also removes gnome-shell from appearing in nvidia-smi with small resource usage
    # https://gitlab.gnome.org/GNOME/mutter/-/issues/2969
    __EGL_VENDOR_LIBRARY_FILENAMES="/${pkgs.mesa}/share/glvnd/egl_vendor.d/50_mesa.json";
    __GLX_VENDOR_LIBRARY_NAME="mesa";

  };

  # Systemd service to turn off dGPU if on Integrated mode. It turns itself on after wake from suspend..
  systemd.services.dgpuDisable = {
      wantedBy = [ "suspend.target" "graphical.target" ];
      before = ["graphical.target"];
      after = [ "suspend.target" ];
      description = "Disable dGPU after wake from suspend if on Integrated mode";
      path = [pkgs.supergfxctl];
      serviceConfig = {
        Type = "simple";
        User = "root";
        ExecStart = "${lib.getExe dgpuDisableScript}";
      };
  };

  # Enable the X11 windowing system.
  services.xserver.enable = true;

  # Enable the GNOME Desktop Environment.
  services.displayManager.gdm.enable = true;
  services.desktopManager.gnome.enable = true;

    # Gnome experimental features
  programs.dconf.profiles.user.databases = [
    {
      lockAll = true; # prevents overriding
      settings = {
        "org/gnome/mutter" = {
          experimental-features = ["scale-monitor-framebuffer" "xwayland-native-scaling"];
        };
      };
    }
  ];

  # Configure keymap in X11
  services.xserver.xkb = {
    layout = "us";
    variant = "";
  };


  # Graphics for AMD
  hardware.graphics = {
    enable = true;
    enable32Bit = true;
  };
  # Graphics for Nvidia
  # Load nvidia driver for Xorg and Wayland
  services.xserver.videoDrivers = ["nvidia" "amdgpu"];
  hardware.nvidia = {
    modesetting.enable = true;
    powerManagement.enable = false; # Disable until Gnome flicker when dGPU wake/sleep is fixed
    powerManagement.finegrained = false;
    dynamicBoost.enable = true; # Needed to use more than 55w base on laptop
    open = true;
    package = config.boot.kernelPackages.nvidiaPackages.beta;
    prime = {
      offload = {
        enable = true;
        enableOffloadCmd = true;
      };
      nvidiaBusId = "PCI:64:0:0";
      amdgpuBusId = "PCI:65:0:0";
    };
  };


  # Asus kernel and asus config
  services.supergfxd.enable = true;
  services = {
    asusd = {
      enable = true;
      enableUserService = true;
    };
  };

  # Enable linux-firmware incase that helps with compatability on laptop
  hardware.enableRedistributableFirmware = true;

  # Enable CUPS to print documents.
  services.printing.enable = true;

  # Enable sound with pipewire.
  services.pulseaudio.enable = false;
